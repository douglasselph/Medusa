<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainButton">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FrameTitle">
        <item name="android:textSize">29sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RaceName">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AttrLabel">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AttrHelp">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FrameButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/common_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="DetailsLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailsValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ListItem">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ListText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ListSubText">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="StatItemLabel">
        <item name="android:layout_marginRight">@dimen/stat_item_margin_right</item>
        <item name="android:layout_marginTop">@dimen/stat_item_margin_top</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="StatItemValue">
        <item name="android:layout_marginTop">@dimen/stat_item_margin_top</item>
        <item name="android:ems">@integer/stat_value_ems</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
