<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/separator"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ImageButton
        android:id="@+id/help_details"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/help"
        android:scaleType="fitCenter"
        android:layout_marginRight="6dp"/>

    <TextView
        android:id="@+id/main_line"
        style="@style/ListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/help_details"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/main_subline"
        style="@style/ListSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="@id/help_details"
        app:layout_constraintTop_toBottomOf="@id/main_line"/>

</android.support.constraint.ConstraintLayout>
